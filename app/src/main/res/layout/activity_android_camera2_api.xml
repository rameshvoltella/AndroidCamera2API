<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_android_camera2_api"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.rutvi.androidcamera2api.AndroidCameraApi">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_takepicture"
        android:layout_alignParentTop="true"/>
    <Button
        android:id="@+id/btn_takepicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Capture" />

    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/capturePhotoImageView"
        android:layout_above="@id/btn_takepicture"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/textview_result"
        android:gravity="center_horizontal"
        android:background="#33000000"
        android:text="NO TEXT"
        android:textSize="@dimen/font_size"
        />
    <Button
        android:id="@+id/btn_getText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="OCR" />
</RelativeLayout>
